<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/dist/output.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Marcellus&family=Montserrat&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="node_modules/owl.carousel/dist/assets/owl.carousel.min.css" />
    <link rel="stylesheet" href="node_modules/lightbox2/dist/css/lightbox.min.css">

    <%- include('background') %>
</head>
<body>

<%- include('navigation') %>

<main class="relative text-white">
    <div class="">
        <img src="/img/logo.png" class="mx-auto w-3/5 md:w-1/2 max-w-lg p-4">
        <div class="mx-auto w-3/5 md:w-1/2 max-w-lg border-b-2 border-b-black"></div>
        <h1 class="text-lg md:text-2xl lg:text-4xl font-bold text-center pt-4 pb-8 px-2 uppercase font-light">
             GALERIE
        </h1>
        <div class="text-center text-lg lg:text-xl m-auto px-8 lg:px-32" id="gallery-text">
            <%= text %>
        </div>
    </div>

    <div class=" md:max-w-[80%] mx-auto px-4 sm:px-6 lg:px-8 mt-10">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <% paints.forEach(function(paint) { %>
                <div class="gallery-item shadow-lg rounded-lg overflow-hidden relative">
                    <div class="gallery-carousel owl-carousel owl-theme">
                        <% paint.pictures.forEach(function(picture) { %>
                            <a href="<%= picture %>" data-lightbox="gallery" data-title="<%= paint.description %>" class="block">
                                <img class="object-cover object-center max-w-[90vw] md:max-w-[35vw]" src="<%= picture %>" alt="<%= paint.name %>" data-lightbox="gallery">
                            </a>
                        <% }) %>
                    </div>
                    <div class="p-4 text-center">
                        <h3 class="font-semibold text-lg mb-2"><%= paint.name %></h3>
                        <p class="text-gray-600 mb-2"><%= paint.size %></p>
                        <p class="text-gray-600 mb-4"><%= paint.price %>â‚¬</p>
<!--                        <p class="text-gray-500 text-sm"><%= paint.description %></p>-->
                    </div>
                </div>
            <% }) %>
        </div>
    </div>


    <div class="mt-10">
        <h2 class="text-lg md:text-2xl lg:text-4xl font-bold text-center pt-4 pb-8 px-2 uppercase font-light" id="contact">
            CONTACT
        </h2>
        <p class="p-4 lg:px-32 text-center  font-bold">
            <%= contact %>
        </p>
    </div>

    <%- include('contact') %>

</main>

<div id="loading-page" class="fixed top-0 left-0 w-screen h-screen flex flex-col justify-center items-center z-50" scroll="no" style="overflow: hidden">
    <img src="img/logo.png" alt="Logo" class="max-w-[70vw]">
    <div class="lds-ellipsis"><div></div><div></div><div></div><div></div></div>

</div>

<script src="https://kit.fontawesome.com/e04d7c62a8.js" crossorigin="anonymous"></script>
<script src="/node_modules/jquery/dist/jquery.js"></script>
<script src="/node_modules/owl.carousel/dist/owl.carousel.min.js"></script>
<script src="/node_modules/lightbox2/dist/js/lightbox.js"></script>
<script src="/node_modules/animejs/lib/anime.min.js"></script>
<script src="../script.js"></script>
<script src="../animation1.js"></script>
</body>
</html>